 @model List<Exam2025.API.Models.ExamTBLViewModel>

@{
    ViewData["Title"] = "Available Exams";
}


<section class="exams section-padding bg-light">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold text-dark">Available Exams</h2>

        <div class="row g-4">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="exam-card shadow-sm rounded-4 overflow-hidden">
                            <a asp-area="" asp-controller="Exams" asp-action="StartExam" asp-route-id="@item.ID">
                                <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fstatic.vecteezy.com%2Fsystem%2Fresources%2Fpreviews%2F021%2F492%2F942%2Foriginal%2Fexamination-paper-illustration-with-kids-online-exam-form-papers-answers-survey-or-internet-quiz-in-cartoon-hand-drawn-for-landing-page-templates-vector.jpg&f=1&nofb=1&ipt=7cf5ffc51b4e4b7cce5af696bc7741a1f776469a42010c4602c858eb14c7a079"
                                     class="img-fluid exam-image" alt="@item.Name">
                            </a>

                            <div class="exam-content p-3">
                                <h5 class="exam-title mb-2">
                                    <a asp-area="" asp-controller="Exams" asp-action="StartExam"
                                       asp-route-ID="@item.ID" class="text-dark text-decoration-none">
                                        @item.Name
                                    </a>
                                </h5>

                                <p class="exam-description text-muted mb-3">@item.Body</p>

                                <a asp-area="" asp-controller="Exams" asp-action="StartExam"
                                   asp-route-ID="@item.ID" class="btn btn-warning w-100 rounded-pill">
                                    Start Exam
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">No exams available at the moment.</p>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .exam-card {
        background: #fff;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .exam-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }

    .exam-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .exam-title {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .exam-description {
        font-size: 0.9rem;
        min-height: 50px;
    }

    .btn-warning {
        background-color: #FFC107;
        border-color: #FFC107;
        color: #000;
        font-weight: 600;
    }

        .btn-warning:hover {
            background-color: #e6b800;
            border-color: #e6b800;
        }

    .section-padding {
        padding: 60px 0;
    }
</style>


