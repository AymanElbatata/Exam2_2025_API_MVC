@model IEnumerable<Exam2025.API.Models.UserExamTBLViewModel>

@{
    ViewData["Title"] = "Completed Exams";
}

<div class="p-5 text-center">
    <h2>Completed Exams</h2>
    <caption>Final Results</caption>
    @if (ViewBag.Message != null)
    {
        <span class="mt-2 mb-2 text-danger">@ViewBag.Message</span>
    }


@if(Model.Count() > 0){

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
                    <th>@Html.DisplayNameFor(model => model.ExamTBL.Name)</th>
                     <th>@Html.DisplayNameFor(model => model.ExamTBL.SuccessRate)%</th>
                    <th>@Html.DisplayNameFor(model => model.UserRate)%</th>
                    <th>@Html.DisplayNameFor(model => model.Result) </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CreationDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.ExamTBL.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.ExamTBL.SuccessRate)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserRate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Result)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="p-5 text-center">
    <h6>You didn't take any Exam !</h6>
    </div>
}

</div>